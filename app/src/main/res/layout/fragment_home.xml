<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_first_album_default"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/home_pannel_button_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_button_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/home_pannel_button_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_ticket"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_button_setting_iv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/home_pannel_button_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_setting"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_button_nugu_iv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_button_nugu_iv"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_panel_play_large"/>
        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 2022.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv"/>
        <ImageView
            android:id="@+id/home_pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/home_pannel_background_iv"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/home_pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/home_pannel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"/>
        <TextView
            android:id="@+id/home_pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/home_pannel_album_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"/>
        <TextView
            android:id="@+id/home_pannel_today_music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv"/>
        <ImageView
            android:id="@+id/home_pannel_today_music_iv"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_music_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/home_pannel_total_music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/home_pannel_korea_music_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv"/>
        <TextView
            android:id="@+id/home_pannel_korea_music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/home_pannel_foriegn_music_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv" />
        <TextView
            android:id="@+id/home_pannel_foriegn_music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv"/>
        <HorizontalScrollView
            android:id="@+id/home_pannel_today_music_hsv"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_pannel_today_music_cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/home_pannel_today_music_li"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_today_music_cl"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_album_img_detail_iv"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_album_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In My Bed"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bear"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_pannel_today_music_li2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_today_music_cl"
                    app:layout_constraintStart_toEndOf="@+id/home_pannel_today_music_li"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_album_img_detail_iv2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_album_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In My Bed"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bear"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_pannel_today_music_li3"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_today_music_cl"
                    app:layout_constraintStart_toEndOf="@+id/home_pannel_today_music_li2"                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_album_img_detail_iv3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_album_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In My Bed"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bear"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <ImageView
            android:id="@+id/home_pannel_view_pager_iv"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/img_home_viewpager_exp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_hsv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/home_pannel_every_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일 들어도 좋은 팟캐스트"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_view_pager_iv"/>

        <HorizontalScrollView
            android:id="@+id/home_pannel_every_day_hsv"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_every_day_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_pannel_every_day_cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/home_pannel_every_day_li"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_every_day_cl"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_cast_img_detail_iv"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_potcast_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In My Bed"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bear"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_pannel_every_day_li2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_every_day_cl"
                    app:layout_constraintStart_toEndOf="@+id/home_pannel_every_day_li"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_cast_img_detail_iv2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_potcast_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In My Bed"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bear"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_pannel_every_day_li3"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_every_day_cl"
                    app:layout_constraintStart_toEndOf="@+id/home_pannel_every_day_li2"                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_cast_img_detail_iv3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/img_potcast_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In My Bed"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bear"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/home_pannel_video_collection_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비디오 콜렉션"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_every_day_hsv"/>

        <HorizontalScrollView
            android:id="@+id/home_pannel_video_collection_hsv"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_video_collection_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_pannel_video_collection_cl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/home_pannel_video_collection_li"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_video_collection_cl"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_video_collection_img_detail_iv"
                        android:layout_width="300dp"
                        android:layout_height="170dp"
                        android:src="@drawable/img_video_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가수"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_pannel_video_collection_li2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toTopOf="@+id/home_pannel_video_collection_cl"
                    app:layout_constraintStart_toEndOf="@+id/home_pannel_video_collection_li"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/home_pannel_video_collection_img_detail_iv2"
                        android:layout_width="300dp"
                        android:layout_height="170dp"
                        android:src="@drawable/img_video_exp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가수"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/home_pannel_choose_iv"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/discovery_banner_aos"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_video_collection_hsv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:id="@+id/yanolja_iv"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/img_home_viewpager_exp2"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_choose_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>